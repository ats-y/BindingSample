<?xml version="1.0" encoding="UTF-8"?>
<ContentView
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="BindingSample.Views.GoOutSingleView">
    <ContentView.Content>

        <Frame
            BorderColor="Black"
            BackgroundColor="{Binding Details[0].BackgroundColor.Value}"
            HasShadow="False"
            Padding="10,10,10,10">
            <StackLayout>

                <StackLayout.GestureRecognizers>
                    <TapGestureRecognizer
                        Command="{Binding Details[0].DetailTapCommand}" />
                </StackLayout.GestureRecognizers>

                <Label
                    Text="{Binding Title}" />
                <Label
                    Text="{Binding Details[0].EventTime,
                           StringFormat='{0:yyyy/MM/dd HH:mm}'}" />
                <Label
                    Text="{Binding Details[0].Content}" />
                <Label
                    FontSize="Small"
                    Text="{Binding Details[0].Comment}" />
            </StackLayout>
        </Frame>

    </ContentView.Content>
</ContentView>
